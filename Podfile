# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'Gokada ATM' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Gokada ATM
    pod 'Cleanse'
    pod 'ProgressHUD'
    pod 'Toast', '~> 4.0.0'
    pod 'Alertift', '~> 4.1'
    pod 'ChameleonFramework/Swift', :git => 'https://github.com/ViccAlexander/Chameleon.git'
    pod 'PaddingLabel', '1.1'
    #Allows using view controllers as dialogs
    pod 'PopupDialog', '~> 1.1'
    #Fake data generation library
    pod 'Fakery'

  target 'Gokada ATMTests' do
    inherit! :search_paths
    # Pods for testing
    #Mocking library for unit tests
    pod 'Mockit', :git => "https://github.com/sabirvirtuoso/Mockit.git"
  end

  target 'Gokada ATMUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
